{
    "manifest_version": 3,
    "name": "CoopCycle Tools",
    "version": "1.0.0",
    "description": "A collection of tools for CoopCycle",
    "icons": {
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "action": {
        "default_popup": "popup-sling.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["cookies", "downloads"],
    "host_permissions": [
        "https://app.getsling.com/*",
        "https://*.coopcycle.org/*",
        "https://coopcycle.antoinebagnaud.me/*"
    ],
    "content_scripts": [
        {
            "js": ["utils.js", "content-sling.js"],
            "matches": ["https://app.getsling.com/*"]
        }
    ]
}
